[user]
	name = yusuiked
	email = yusuiked@gmail.com
[color]
	ui = auto
[core]
	autocrlf = input
	excludesfile = ~/.gitignore_global
	attributesfile = ~/.gitattributes_global
	pager = delta
[init]
	defaultBranch = main
[includeIf "gitdir:~/src/github.com/heyinc/"]
	path = ~/.gitconfig_office
[pull]
	ff = only
	rebase = false
[merge]
	conflictstyle = diff3
[diff]
	compactionHeuristic = true
    colorMoved = default
[alias]
	ci = commit
	co = checkout
	sw = switch
	rst = restore
	st = status
	br = branch
	hist = log --pretty=\"format:%C(White)%ad %C(yellow)%h %C(Red)(%an): %C(White)%s\" --graph --date=short
	ig = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
	cbr = "!f() { git branch --merged | grep -E -v '^\\*|\\<develop\\>|\\<master\\>|\\<main\\>' | xargs git branch -d ;}; f"
[interactive]
	diffFilter = delta --color-only --features=interactive
[add.interactive]
	useBuiltin = false
[delta]
	# See: https://zenn.dev/arkbig/articles/terminal-2022_e6b10a37281b21
	features = decorations
    syntax-theme = OneHalfDark
    navigate = true
    side-by-side = true
[delta "interactive"]
	keep-plus-minus-markers = false
[delta "decorations"]
	commit-decoration-style = blue ol
	commit-style = raw
	file-style = omit
	hunk-header-decoration-style = blue box
	hunk-header-file-style = red
	hunk-header-line-number-style = "#067a00"
	hunk-header-style = file line-number syntax
[ghq]
	root = ~/src
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[secrets]
	providers = git secrets --aws-provider
	patterns = (A3T[A-Z0-9]|AKIA|AGPA|AIDA|AROA|AIPA|ANPA|ANVA|ASIA)[A-Z0-9]{16}
	patterns = (\"|')?(AWS|aws|Aws)?_?(SECRET|secret|Secret)?_?(ACCESS|access|Access)?_?(KEY|key|Key)(\"|')?\\s*(:|=>|=)\\s*(\"|')?[A-Za-z0-9/\\+=]{40}(\"|')?
	patterns = (\"|')?(AWS|aws|Aws)?_?(ACCOUNT|account|Account)_?(ID|id|Id)?(\"|')?\\s*(:|=>|=)\\s*(\"|')?[0-9]{4}\\-?[0-9]{4}\\-?[0-9]{4}(\"|')?
	allowed = AKIAIOSFODNN7EXAMPLE
	allowed = wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
